    <script>
        let draggedElement = null;
        let scheduleData = {};

        // Inicializar empleados arrastrables
        const employees = document.querySelectorAll('.employee');
        employees.forEach(emp => {
            emp.addEventListener('dragstart', handleDragStart);
            emp.addEventListener('dragend', handleDragEnd);
        });

        // Inicializar zonas de destino
        const shifts = document.querySelectorAll('.shift');
        shifts.forEach(shift => {
            shift.addEventListener('dragover', handleDragOver);
            shift.addEventListener('drop', handleDrop);
            shift.addEventListener('dragleave', handleDragLeave);
        });

        function handleDragStart(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
            e.dataTransfer.setData('text/html', this.innerHTML);
        }

        function handleDragEnd(e) {
            this.classList.remove('dragging');
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            this.classList.add('drag-over');
            return false;
        }

        function handleDragLeave(e) {
            this.classList.remove('drag-over');
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }
            this.classList.remove('drag-over');

            if (draggedElement) {
                const name = draggedElement.dataset.name;
                const role = draggedElement.dataset.role;
                const day = this.dataset.day;
                const shift = this.dataset.shift;

                // Crear elemento asignado
                const assignedEmp = document.createElement('div');
                assignedEmp.className = `assigned-employee ${role}`;
                assignedEmp.draggable = true;
                assignedEmp.dataset.name = name;
                assignedEmp.dataset.role = role;
                assignedEmp.innerHTML = `
                    <span>${name}</span>
                    <button class="remove-btn" onclick="removeEmployee(this)">Ã—</button>
                `;

                // Agregar eventos de arrastre para reasignar
                assignedEmp.addEventListener('dragstart', function(e) {
                    draggedElement = this;
                    this.style.opacity = '0.5';
                });

                assignedEmp.addEventListener('dragend', function(e) {
                    this.style.opacity = '1';
                    this.remove();
                });

                this.appendChild(assignedEmp);

                // Guardar en datos
                if (!scheduleData[day]) scheduleData[day] = {};
                if (!scheduleData[day][shift]) scheduleData[day][shift] = [];
                scheduleData[day][shift].push({name, role});
            }

            return false;
        }

        function removeEmployee(btn) {
            const empElement = btn.parentElement;
            empElement.style.animation = 'slideOut 0.3s ease';
            setTimeout(() => {
                empElement.remove();
            }, 300);
        }
    </script>
</body>
